<Window x:Class="SystemAudioRecordingSoftware.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mainContent="clr-namespace:SystemAudioRecordingSoftware.Presentation.MainContent;assembly=SystemAudioRecordingSoftware.Presentation"
        Width="1200"
        Height="800"
        MinWidth="600"
        MinHeight="500"
        Title="System Audio Recording Software"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}"
        TextElement.FontSize="14"
        TextElement.FontWeight="Medium"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        mc:Ignorable="d">
    <mainContent:MainView />
</Window>